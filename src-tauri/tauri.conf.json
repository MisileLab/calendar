        "active": true,
        "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEREQTA4N0YzQ0MxNDk5OTAKUldTUW1SVE04NGVnM2RQd2VzcGRmYVRKOUhkalpVZUlJaEtINnl5aWZPL1ZTMmdZOTJUWXo4a3kK"
